# Rick and Morty SRE Application Environment Variables
# Copy this file to .env and update the values for your environment

# Application Configuration
APP_NAME="Rick and Morty SRE App"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/rickmorty"
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Cache Configuration (Redis)
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=3600
CACHE_PREFIX="rickmorty:"

# Rick and Morty API Configuration
RICK_MORTY_API_URL="https://rickandmortyapi.com/api"
RICK_MORTY_TIMEOUT=30
RICK_MORTY_MAX_RETRIES=3
RICK_MORTY_BACKOFF_FACTOR=0.3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability Configuration
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# Environment (development, staging, production)
ENVIRONMENT=development
